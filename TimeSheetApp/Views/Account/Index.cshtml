@model ReflectionIT.Mvc.Paging.PagingList<timesheetapps.Models.AccountClass>
@using ReflectionIT.Mvc.Paging
@addTagHelper*, ReflectionIT.Mvc.Paging

@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Index";
    ViewData["Active"] = "Account";
}

@*Redirect to Login page after Logout*@
@if (HttpContextAccessor.HttpContext.Session.GetString("Logout") == "1")
{
    <script type="text/javascript">
        window.location.href = "@Url.Action("Index","Login")";
    </script>
}

<div class="form-row">
    <div class="form-group  col-md-4">
    </div>
    <div class="form-group  col-md-4">
        <form asp-controller="Account" asp-action="Index" method="post">
            <div class="card">
                <div class="card-header container row p-0 m-0">
                    <div class="form-group  col-md-12">
                        @{
                            if (ViewBag.AccountIsActive == "inactive")
                            {
                                <input type="radio" id="Active" name="AccountIsActive" value="1" onclick="setValue(this)" /><label for="Active">&nbsp;&nbsp;Active Account&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                                <input type="radio" id="InActive" name="AccountIsActive" value="0" onclick="setValue(this)" checked="checked" /><label for="InActive">&nbsp;&nbsp;Deactive Account&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                            }
                            else
                            {
                                <input type="radio" id="Active" name="AccountIsActive" value="1" onclick="setValue(this)" checked="checked" /><label for="Active">&nbsp;&nbsp;Active Account&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                                <input type="radio" id="InActive" name="AccountIsActive" value="0" onclick="setValue(this)" /><label for="InActive">&nbsp;&nbsp;Deactive Account&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                            }
                        }
                    </div>
                </div>
                <div class="card-body">
                    <div class="form-row">
                        <div class="form-group  col-md-12">
                            Find by Account <input type="text" name="searchAccount" class="form-control" value="@ViewData["searchAccount"]" />
                        </div>
                    </div>
                </div>
                <div class="card-footer container row p-0 m-0">
                    <div class="col-md-3">
                    </div>
                    <div class="col-md-3">
                        <input type="submit" value="Search" class="btn btn-info form-control text-white" />
                    </div>
                    <div class="col-md-3">
                        <a asp-action="Index" class="btn btn-info  form-control text-white">Reset</a>
                    </div>
                    <div class="col-md-3">
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="form-group  col-md-4">
    </div>
</div>

<br />

@if (Model.Count() == 0)
{
    <h4 style="color:red; text-align: center;">No Records Found !</h4>
}
else
{
    <div class="form-row">
        <div class="form-group  col-md-1">
        </div>
        <div class="form-group  col-md-10">
            <div class="card">
                <div class="card-header row p-0 m-0">
                    <div class="col-md-10">
                        Total Record Count: @Model.TotalRecordCount
                        <nav>
                            <vc:pager paging-list="@Model"></vc:pager>
                        </nav>
                    </div>
                    <div class="col-md-2">
                        <a asp-controller="Account" asp-action="Create" class="btn btn-info form-control text-white">Create Account</a>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-striped">
                        <thead class="table table-secondary">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.AccountName)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AccountName)
                                    </td>
                                    <td>
                                        @{
                                            if (ViewBag.AccountIsActive == "inactive")
                                            {
                                                <a asp-action="ChangeAccountStatus" asp-route-id="@item.AccountID" asp-route-Changeto="1" class="text-danger" onclick=" return confirm('Are you sure you want to Activate the Account?')">Activate</a>
                                            }
                                            else
                                            {
                                                <a asp-action="Edit" asp-route-id="@item.AccountID" class="text-info">Edit</a>
                                                <a asp-action="ChangeAccountStatus" asp-route-id="@item.AccountID" asp-route-Changeto="0" class="text-danger" onclick=" return confirm('Are you sure you want to Deactivate the Account?')"> | Deactivate</a>
                                            }
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer row p-0 m-0">
                    <nav>
                        <vc:pager paging-list="@Model"></vc:pager>
                    </nav>
                </div>
            </div>
        </div>
        <div class="form-group  col-md-1">
        </div>
    </div>
}

@section scripts
{
    <script>
        $('input[type=radio]').on('click', function () {
            $("form").submit();
        });
    </script>
}